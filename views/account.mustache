<!doctype html>
<html>
<head>
    <title>Wegmans Items</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>
</head>
<body>
<div class="ui secondary pointing menu">
  <a class="item" href='/profile'>
    List
  </a>
  <a class="active item" href='/account'>
    Profile
  </a>
  <div class="right menu">
    <a class="ui item" href="/logout">
      Logout
    </a>
  </div>
</div>
<!--<div class="ui segment">-->
  <!--<p></p>-->
<!--</div>-->

<div class="ui grid">
  <div class="four wide column"></div>
  <div class="eight wide column">
    <form class="ui large form user-data" align="left" action="/updateinfo" method="POST">
        <div class="field">
            <label>Name: </label>
            <input type="text" name="name" value="{{user.name}}">
        </div>
        <h6 class="ui dividing header"></h6>
        <div class="field">
            <label>Email: </label>
            <input type="text" name="email" value="{{user.email}}">
        </div>
        <h6 class="ui dividing header"></h6>
        <div class="field">
            <label>My Store: </label>
            <input type="text" name="mystore" value="{{user.mystore}}">
        </div>
        <button class="ui button" type="submit">Save Changes</button>
    </form>

</div>
  <div class="four wide column"></div>
</div>
</body>
</html>
